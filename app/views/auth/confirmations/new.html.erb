<h1>Let's confirm your email</h1>

<%= form_tag auth_confirmation_path do %>
  <div class="form-group">
    <%= label_tag :token %>
    <%= text_field_tag :token, nil, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= submit_tag 'Verify My Email', class: 'btn btn-success' %>
  </div>
<% end %>
