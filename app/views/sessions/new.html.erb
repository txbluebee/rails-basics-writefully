<%= form_tag session_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= submit_tag "Sign In", class: 'btn btn-success btn-block' %>
  </div>
<% end %>
